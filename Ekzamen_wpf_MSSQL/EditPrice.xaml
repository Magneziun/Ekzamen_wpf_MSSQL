<Window x:Class="Ekzamen_wpf_MSSQL.EditPrice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ekzamen_wpf_MSSQL"
        mc:Ignorable="d"
        Title="EditPrice" Height="110" Width="403" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/Assets/загруженное.jpg">
            <ImageBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleY="5"/>
                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                    <RotateTransform CenterX="0.5" CenterY="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ImageBrush.RelativeTransform>
        </ImageBrush>
    </Window.Background>
    <Grid>
        <TextBox x:Name="EditPriceTexBox"
                 HorizontalAlignment="Left"
                 Margin="167,24,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="222" Height="21"
                 Foreground="White"
                 FontSize="18"
                 SelectionBrush="White" 
                 Text="___" Panel.ZIndex="4" 
                 FontFamily="Bahnschrift Condensed"
                 KeyDown="EditPriceTexBox_KeyDown">
            <TextBox.Template>
                <ControlTemplate TargetType="TextBox">
                    <Border CornerRadius="5" 
                Background="#4CFFFFFF" 
                BorderBrush="Gray" 
                BorderThickness="1">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <Label Content="Bведите новую цену " HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" Width="152" FontFamily="Bahnschrift Condensed" Foreground="White" FontSize="20"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="457,284,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="EditPriceBut" Content="Изменить
                " 
                Margin="278,62,14,18"
                Background="#FE3B3B3B" Foreground="White" FontFamily="Bahnschrift Condensed" FontSize="13" HorizontalContentAlignment="Left" Click="Button_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
